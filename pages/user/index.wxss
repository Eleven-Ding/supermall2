/* pages/user/index.wxss */
page {
  background-color: #edece8;
}

.user_info_wrap {
  position: relative;
  height: 45vh;
  background: -webkit-linear-gradient(bottom, rgb(243, 247, 255), #1B2A48, #B16886);
  background: -webkit-linear-gradient(top, #ffffff, #e288e2, rgb(255, 138, 187));
  background-attachment: fixed;
  overflow: hidden;
  text-align: center;
}

.user_bg {
  height: 50vh;
  width: 105%;
  margin-left: -15rpx;
  margin-top: -10rpx;
  filter: blur(10rpx);
}

.user_img_wrap {
  position: relative
}

.user_info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 25%;
  text-align: center;
}

.user_icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;

}

.user_name {
  color: rgb(247, 247, 247);
  margin-top: 40rpx;
  font-size: 35rpx;
  font-weight: 600;
}

.user_button {
  border-radius: 20rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border: 4rpx solid rgb(63, 237, 63);
  padding: 20rpx 80rpx;
  color: rgb(96, 90, 90);
  font-size: 36rpx;
  font-weight: bold;
}

.user_content {
  position: relative;
}

.user_main {
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
}

.history_wrap {
  display: flex;
  background-color: white;
}

.history_wrap navigator {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}

.his_num {
  color: #ff5777;
}

.his_name {
  font-size: 28rpx;
  margin-top: 5rpx;
}

.orders_wrap {

  background-color: white;
  margin-top: 20rpx;
}

.orders_title {
  padding: 15rpx;
  border-bottom: 1rpx solid #ccc;
}

.order_content {
  padding: 20rpx 0;
  display: flex;
}
.order_content navigator{
  flex: 1;
  text-align: center;
}
.iconfont{
  color: #ff5777;
}
.order_name {
  margin-top: 10rpx;
}
.other{
  margin-top: 20rpx;
  color: rgb(68, 68, 68);
}
.item{
  height: 90rpx;
  display: flex;
  align-items: center;
  background-color: white;
  padding: 0 10rpx;
  border-bottom: 1px solid #ccc;
}
.service{
  justify-content: space-between;
}
.introduce{
  margin-top: 15rpx;
  height: 90rpx;
  display: flex;
  align-items: center;
  background-color: white;
  color: rgb(68, 68, 68);
  padding: 0 10rpx;
  border-bottom: 1px solid #ccc;
  position: relative;
}
.introduce button{
  position: absolute;
  width: 100%;
  height: 100%;
  opacity: 0;
}